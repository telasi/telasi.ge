<%= table_for @registrations, title: @title, collapsible: true, icon: '/icons/fugue/light-bulb.png' do |t|
  t.item_action ->(x) { admin_confirm_customer_registration_url(id: x.id) }, label: t('models.billing_customer_registration.actions.confirm'), method: 'post', confirm: t('models.billing_customer_registration.actions.confirm_confirm'), icon: '/icons/fugue/tick-circle.png'
  t.text_field 'user'
  t.complex_field i18n: 'customer' do |c|
    c.text_field 'customer.accnumb', tag: 'code'
    c.text_field 'customer.custname'
  end
  t.complex_field i18n: 'rs_name' do |c|
    c.text_field 'rs_tin', tag: 'code'
    c.text_field 'rs_name'
  end
  t.boolean_field :confirmed
  t.paginate records: t('models.general.records')
end %>