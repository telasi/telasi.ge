<%= forma_for @region, title: @title, icon: '/icons/fugue/building.png', collapsible: true do |f|
  f.edit_action admin_edit_region_url(id: @region.id)
  f.tab title: t('models.general.general_info'), icon: '/icons/fugue/building.png' do |f|
    f.text_field :name, required: true, readonly: true
    f.text_field :address
    f.text_field :phone
    f.text_field :phone_exp
    f.boolean_field :trash_office
  end
  f.tab title: t('models.general.location_info'), icon: '/icons/fugue/globe.png' do |f|
    f.boolean_field :show_on_map
    f.map_field :location, height: 400, width: 700
  end
  f.submit t('models.general.actions.save')
  f.cancel_button admin_regions_url
end %>