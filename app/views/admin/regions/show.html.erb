<%= view_for @region, title: @title, icon: '/icons/fugue/building.png', collapsible: true do |v|
  v.edit_action admin_edit_region_url(id: @region.id)
  v.tab title: t('models.general.general_info'), icon: '/icons/fugue/building.png' do |v|
    v.text_field :name, required: true
    v.text_field :address
    v.text_field :phone
    v.text_field :phone_exp
    v.boolean_field :trash_office
  end
  v.tab title: t('models.general.location_info'), icon: '/icons/fugue/globe.png' do |v|
    v.boolean_field :show_on_map
    v.map_field :location, height: 400, width: 700
  end
  v.tab title: t('models.general.system_info'), icon: '/icons/fugue/traffic-cone.png' do |v|
    v.timestamps
    v.text_field :regionkey, tag: 'code', required: true
  end
end %>