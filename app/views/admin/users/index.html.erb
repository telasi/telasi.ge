<%= user_search @search %>
<%= table_for @users, title: @title, icon: '/icons/fugue/users.png', collapsible: true do |t|
  t.text_field :full_name, url: lambda { |x| admin_user_url(id: x.id) }
  t.text_field :mobile
  t.email_field :email
  t.boolean_field :admin
  t.boolean_field :active
  t.paginate records: t('models.general.records')
end %>