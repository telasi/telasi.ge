<table style="width: 100%;">
  <tr>
    <td style="width: 300px; border-right: 1px solid #d6e3e8; padding-right: 8px;">
      <h1>â„–<%= registration.customer.accnumb %></h1>
      <% if registration.confirmed %>
        <% if registration.customer.cut_candidate? %>
          <div class="alert" style="font-size: 12px; margin-top: -24px;">
            <%= t('models.billing_customer.errors.cut_warning') %>
            <code><%= registration.customer.cut_deadline.strftime('%d-%b-%Y') %></code>.
          </div>
        <% end %>
        <!-- TODO: place here SMS notification preferences -->
      <% else %>
        <div style="margin-top: -24px;">
          <p><%= t('models.billing_customer_registration.added')%>: <code><%= registration.created_at.strftime('%d-%b-%Y') %></code></p>
        </div>
        <div class="alert" style="font-size: 12px;">
          <%= t('models.billing_customer_registration.errors.not_confirmed').html_safe %>
        </div>
      <% end %>
    </td>
    <td style="padding-left: 16px;">
       <%= render partial: 'customers/customer_info', locals: { customer: registration.customer, with_actions: registration.confirmed } %>
    </td>
</table>