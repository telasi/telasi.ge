<div class="row">
  <div class="span12">
    <div class="module">
      <%= render partial: 'customers/customer_info_for_history', locals: { customer: @customer } %>
      <hr />
      <div style="padding: 0 0 16px 0;">
        <img src="/icons/light-bulb.png"></img>
        <code>â„–<%= @customer.accnumb.to_ka %></code>
        <span style="font-weight: bold;"><%= @title %></span>
      </div>
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th><%= t('models.billing_customer.operation') %></th>
            <th width="150"><%= t('models.billing_customer.kwh') %></th>
            <th width="150"><%= t('models.billing_customer.gel') %></th>
            <th width="150"><%= t('models.billing_customer.prev_balance') %></th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tr>
          <td>
            <code><%= item.itemdate.strftime('%d-%b-%Y') %></code>
            <%= item.operation %>
          </td>
          <td style="text-align: right;"><code><%= number_with_precision item.kwt, precision: 2 %></code> kWh</td>
          <td style="text-align: right;"><code><%= number_with_precision item.amount, precision: 2 %></code> GEL</td>
          <td style="text-align: right;"><code><%= number_with_precision item.balance, precision: 2 %></code> GEL</td>
        </tr>
        <% end %>
      </table>
      <%= will_paginate @items %>
    </div>
  </div>
</div>