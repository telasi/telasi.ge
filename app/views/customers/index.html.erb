<div class="row">
  <div class="span12">
    <div class="module">
      <% if @registrations.empty? %>
        <%= render partial: 'customers/empty' %> <hr />
      <% else %>
        <% @registrations.each do |reg| %>
          <table>
            <tr>
              <td style="width: 300px; border-right: 1px solid #d6e3e8; padding-right: 8px;">
                <h1>â„–<%= reg.customer.accnumb %></h1>
                <div style="margin-top: -24px;">
                  <p><%= t('models.billing_customer_registration.added')%>: <code><%= reg.created_at.strftime('%d-%b-%Y') %></code></p>
                </div>
                <% if reg.confirmed %>
                  confirmed
                <% else %>
                  <div class="alert" style="font-size: 12px;"><%= t('models.billing_customer_registration.errors.not_confirmed')%></div>
                <% end %>
              </td>
              <td style="padding-left: 16px;">
                 <%= render partial: 'customers/customer_info', locals: { customer: reg.customer } %>
              </td>
          </table>
          <hr />
        <% end %>
      <% end %>
      <div style="text-align: center;">
        <div class="btn-toolbar">
         <%= link_to "#{t('models.billing_customer.actions.add')} &rarr;".html_safe, search_customer_url, class: ['btn', 'btn-success', 'btn-large'] %>
       </div>
       <p class="muted"><%= t('models.billing_customer.actions.add_description') %></p>
      </div>
    </div>
  </div>
</div>