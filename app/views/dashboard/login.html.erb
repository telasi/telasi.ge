<div class="row">
  <div class="span8">
    <div class="module">
      <h1>
        <%= t('models.sys_user.actions.login') %>
        <p><%= t('models.sys_user.actions.login_description') %></p>
      </h1>
      <% if @error.present? %><div class="block-error"><%= @error %></div><% end %>
      <%= rich_form({ email: params[:email], password: params[:password] }) do |f|
        f.text_field :email, autofocus: true, label: t('models.sys_user.email')
        f.password_field :password, label: t('models.sys_user.password')
        f.submit @title
      end %>
    </div>
  </div>
  <div class="span4">
    <div class="module">
      <p><%= t('models.sys_user.actions.not_registered_yet') %></p>
      <p><a href="<%= register_url %>"><%= t('models.sys_user.actions.register') %> &rarr;</a></p>
      <hr />
      <p><%= t('models.sys_user.actions.restore_description') %></p>
      <p><a href="<%= restore_url %>"><%= t('models.sys_user.actions.restore') %> &rarr;</a></p>
    </div>
  </div>
</div>