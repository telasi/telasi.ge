<%= rich_form account do |f|
  f.text_field 'address_code', hint: true, autofocus: true
  f.text_field 'address', hint: true
  f.combo_field 'voltage', voltage_collection
  f.number_field 'power', width: 100
  f.combo_field 'use', use_collection
  if account.summary?
    f.number_field :count, width: 100, hint: true
  else
    f.text_field :rs_tin, width: 200, hint: true
  end
  f.submit @title
end %>