<%= render partial: 'new_customers/top' %>
<div class="text-muted" style="margin-bottom: 16px;">
  <%= t('models.network_new_customer_item.messages.title') %>
</div>
<% if @application.messages.any? %>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= t('models.network_new_customer_item.messages.datetime') %></th>
      <th><%= t('models.network_new_customer_item.messages.messagetext') %></th>
      <th><%= t('models.network_new_customer_item.messages.mobile') %></th>
    </tr>
  </thead>
  <tbody>
    <% @application.messages.each do |msg| %>
      <tr>
        <td><%= msg.created_at.strftime('%d/%m/%Y %H:%M:%S') %></td>
        <td><%= msg.message %></td>
        <td><code><%= KA.format_mobile msg.mobile %></code></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<div class="well">
  <%= t('models.network_new_customer_item.messages.no_message') %>
</div>
<% end %>