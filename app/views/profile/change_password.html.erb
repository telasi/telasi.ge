<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 style="margin: 0;"><%= @title %></h4>
      </div>
      <div class="panel-body">
        <%= form_tag change_password_url, role: 'form' do %>
          <% if @error.present? %><div class="alert alert-danger"><%= @error %></div><% end %>
          <div class="form-group">
            <%= label_tag 'old_password', t('models.sys_user.old_password') %>
            <%= password_field_tag 'old_password', params[:old_password], class: 'form-control', autofocus: true %>
          </div>
          <div class="form-group">
            <%= label_tag 'password', t('models.sys_user.password') %>
            <%= password_field_tag 'password', params[:password], class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag 'password_confirmation', t('models.sys_user.password_confirmation') %>
            <%= password_field_tag 'password_confirmation', params[:password_confirmation], class: 'form-control' %>
          </div>
          <div>
            <%= submit_tag @title, class: ['btn', 'btn-primary'] %>
            <%= link_to t('models.general.actions.cancel'), profile_url, class: ['btn', 'btn-default'] %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>