<%= form_tag '/auth/login', { class: 'log-page', style: 'margin-top: 64px;' } do %>
  <h3><%= @title %></h3>
  <% if @error.present? or alert %>
  <div class="alert alert-block alert-error"><%= @error || alert %></div>
  <% end %>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-envelope"></i></span>
    <%= text_field_tag :email, params[:email], class: 'input-xlarge', placeholder: t('models.sys_user.email'), autofocus: true %>
  </div>
  <div class="input-prepend">
    <span class="add-on"><i class="icon-lock"></i></span>
    <%= password_field_tag :password, params[:password], class: 'input-xlarge', placeholder: t('models.sys_user.password') %>
  </div>
  <div class="controls form-inline">
    <button class="btn-u pull-right" type="submit"><%= @title %></button>
    <div style="padding-top: 8px;"><%= link_to t('models.sys_user.actions.register'), register_url %></div>
  </div>
  <hr>
<% end %>