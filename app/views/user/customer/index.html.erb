<div class="page-header"><h1><%= @title %></div>
<!-- registered customers -->
<h2 class="app-group"><%= t('models.billing_customer.registered_customers') %></h2>
<div class="muted" style="margin: 8px 0;"><%= t('models.billing_customer.actions.add_customer_description') %></div>
<% if @customers.blank? %><%= render partial: 'user/customer/empty'%>
<% else %>
<%= table_for @customers, title: t('models.billing_customer.registered_customers'), collapsible: true, icon: '/icons/fugue/light-bulb.png' do |t|
  t.title_action user_add_customer_url, label: t('models.billing_customer.actions.add_customer'), icon: '/icons/fugue/light-bulb--plus.png'
end %>
<% end %>
<!-- customer balance -->
<h2 class="app-group"><%= t('models.billing_customer.actions.customer_balance') %></h2>
<div class="muted" style="margin: 8px 0;"><%= t('models.billing_customer.actions.customer_balance_description') %></div>
<div class="btn-toolbar">
  <a href="<%= user_customer_balance_url %>" class="btn">
    <img src="/icons/fugue/money-bag-dollar.png"> <%= t('models.billing_customer.actions.customer_balance') %>
  </a>
</div>