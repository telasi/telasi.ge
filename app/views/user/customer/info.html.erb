<%= view_for @customer, title: t('models.bs.customer.actions.customer_electricity'), icon: '/icons/fugue/light-bulb.png', collapsible: true do |v|
  v.tab title: t('models.general.general_info'), icon: '/icons/fugue/user.png' do |t|
    t.col1 do |c|
      c.text_field 'accnumb', tag: 'code', required: true
      c.text_field 'custname', required: true
      c.number_field 'balance', required: true, after: 'GEL', i18n: 'balance2'
      c.text_field 'address', required: true
      c.text_field 'send_address'
      c.text_field 'last_bill_number', tag: 'code', before: '№'
      c.date_field 'last_bill_date'
    end
    t.col2 do |c|
      c.text_field 'status_name'
      c.text_field 'category', required: true
      c.text_field 'activity'
      c.date_field 'createdate'
      c.date_field 'closedate'
    end
  end
  v.tab title: t('models.bs.customer.region'), icon: '/icons/fugue/building.png' do |v|
    v.text_field 'region', required: true
    v.text_field 'region.region_config.address', i18n:  'region_address' # label: t('models.bs.customer.region_address')
    v.text_field 'region.region_config.phone', i18n: 'region_phone' # label: t('models.bs.customer.region_phone')
    v.map_field  'region.region_config.location', height: 400, width: 700, i18n: 'region_location' 
  end
end %>